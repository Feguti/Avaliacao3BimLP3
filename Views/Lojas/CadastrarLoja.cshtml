@model AvaliacaoLP3_3BIM.ViewModels.LojasViewModel;

@{
    ViewData["Title"] = "Cadastrar loja";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar nova loja</h1>
</div>

 <div class="container">
        <div class="con">
            <div class="right-side">
                <br>
                <p>
                    Para realizar o cadastro de sua loja ou kiosque, preencha as informações abaixo:
                </p>
                <form action="#">
                    <div class="input-box">
                        <input type="number" name="Id" placeholder="Digite o número de identificação" />
                    </div>
                    
                    <div class="input-box">
                        <select name="input-box">
                            <option value="valor1" selected>piso 1</option>
                            <option value="valor2">piso 2</option>
                            <option value="valor3">piso 3</option>
                        </select>
                    </div>
                    
                    <div class="input-box">
                        <input type="text" placeholder="Nome da loja..." />
                    </div>
                    
                    <div class="input-box message-box">
                        <textarea placeholder="Descrição..."></textarea>
                    </div>
                    
                    <div class="input-box">
                        <select name="input-box">
                            <option value="valor1" selected>Loja</option>
                            <option value="valor2">Kiosque</option>
                        </select>
                    </div>
                    <div class="input-box">
                        <input type="text" placeholder="Email para contato..." />
                    </div>
                    
                    <div class="button">
                        <input type="button" value="Cadastrar" />
                    </div>
                </form>
            </div>
        </div>
    </div>